{
  "name": "verify-wasm",
  "version": "1.0.0",
  "description": "Tokamak zkEVM Verifier - WebAssembly",
  "type": "module",
  "main": "pkg-node/verify_wasm.js",
  "browser": "pkg-web/verify_wasm.js",
  "types": "pkg/verify_wasm.d.ts",
  "files": [
    "pkg/",
    "pkg-web/",
    "pkg-node/"
  ],
  "scripts": {
    "build": "./build.sh",
    "build:web": "wasm-pack build --target web --out-dir pkg-web --release",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node --release",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg --release",
    "test": "wasm-pack test --headless --firefox",
    "serve": "python3 -m http.server 8000",
    "example": "npm run serve"
  },
  "keywords": [
    "zksnark",
    "zkevm",
    "verification",
    "webassembly",
    "wasm",
    "tokamak"
  ],
  "author": "Tokamak Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokamak-network/Tokamak-zk-EVM.git",
    "directory": "packages/backend/verify/verify-wasm"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
