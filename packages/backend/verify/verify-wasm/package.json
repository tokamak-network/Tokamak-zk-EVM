{
  "name": "@tokamak-network/zkevm-verify-wasm",
  "version": "0.1.0",
  "description": "Tokamak zkEVM SNARK Verifier - WASM implementation for browsers and Node.js",
  "keywords": [
    "tokamak",
    "zkevm",
    "snark",
    "verifier",
    "wasm",
    "zero-knowledge"
  ],
  "author": "Tokamak Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokamak-network/Tokamak-zk-EVM"
  },
  "scripts": {
    "build": "./build.sh",
    "build:web": "wasm-pack build --target web --out-dir pkg-web",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg",
    "test": "wasm-pack test --node",
    "publish:web": "cd pkg-web && npm publish --access public",
    "publish:node": "cd pkg-node && npm publish --access public"
  }
}
