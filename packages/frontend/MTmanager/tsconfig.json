{
  "compilerOptions": {
    "target": "ES2022",     
    "module": "ESNext",          
    "moduleResolution": "bundler", 
    
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,

    "rootDir": "src",
    "outDir": "dist",
    "declaration": true          
  },
  "include": ["src/**/*"]
}
